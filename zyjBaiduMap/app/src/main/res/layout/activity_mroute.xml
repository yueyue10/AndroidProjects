<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入地点进行搜索"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:text="" />

        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@color/bbutton_info_disabled_edge"
            android:text="搜索"
            android:textColor="@color/calendar_text_selected"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/search_layout"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/jiudian"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bbutton_info_disabled_edge"
            android:text="酒店"
            android:textColor="@color/calendar_text_selected"
            android:textSize="15dp" />

        <Button
            android:id="@+id/huichang"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bbutton_info_disabled_edge"
            android:text="会场"
            android:textColor="@color/calendar_text_selected"
            android:textSize="15dp" />

        <Button
            android:id="@+id/jingdian"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/bbutton_info_disabled_edge"
            android:text="景点"
            android:textColor="@color/calendar_text_selected"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/dingwei_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:background="@color/bbutton_info_disabled_edge"
        android:text="定位"
        android:textColor="@color/bbutton_danger"
        android:textSize="15dp" />

    <Button
        android:id="@+id/openbaidu_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@color/bbutton_info_disabled_edge"
        android:text="调用百度地图的导航"
        android:textColor="@color/bbutton_danger"
        android:textSize="15dp" />

    <Button
        android:id="@+id/route_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:background="@color/bbutton_info_disabled_edge"
        android:text="路线"
        android:textColor="@color/bbutton_danger"
        android:textSize="15dp" />

</RelativeLayout>